<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF" /> <!-- semi-transparent white -->
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Subtle inner gradient for glass effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#33FFFFFF"
                android:centerColor="#0DFFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Border highlight -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#40FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
