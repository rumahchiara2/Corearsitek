<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_bg"
    android:gravity="centerCrop"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Card untuk Core Arsitek -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCoreArsitek"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="8dp"
        card_view:cardBackgroundColor="#CCFFFF"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/corearsitek_card"
            android:layout_gravity="center"
            android:contentDescription="@string/corearsitek" />

    </androidx.cardview.widget.CardView>

    <!-- Card untuk Core Studio -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCoreStudio"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="8dp"
        card_view:cardBackgroundColor="#CCFFFF"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/corestudio_card"
            android:layout_gravity="center"
            android:contentDescription="@string/corestudio" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
