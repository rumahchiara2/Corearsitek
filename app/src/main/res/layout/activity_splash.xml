<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background -->
    <ImageView
        android:id="@+id/splashBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/splash_bg"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <!-- Container Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="16dp">

        <!-- Card Core Arsitek -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <!-- BlurView (efek kaca) -->
            <eightbitlab.com.blurview.BlurView
                android:id="@+id/blurCardArsitek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.9" />

            <!-- Isi Card -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/logoCoreArsitek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="260dp"
                    android:src="@drawable/corearsitek_card"
                    android:scaleType="fitCenter"
                    android:contentDescription="@null" />

                <!-- Shine -->
                <ImageView
                    android:id="@+id/shineArsitek"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/shine_effect"
                    android:alpha="0.40"
                    android:scaleType="fitXY" 
                    android:visibility="visible"/>
            </FrameLayout>
        </FrameLayout>

        <!-- Card Core Studio -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- BlurView (efek kaca) -->
            <eightbitlab.com.blurview.BlurView
                android:id="@+id/blurCardStudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.9" />

            <!-- Isi Card -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/logoCoreStudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="260dp"
                    android:src="@drawable/corestudio_card"
                    android:scaleType="fitCenter"
                    android:contentDescription="@null" />

                <!-- Shine -->
                <ImageView
                    android:id="@+id/shineStudio"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/shine_effect"
                    android:alpha="0.40"
                    android:scaleType="fitXY" 
                    android:visibility="visible"/>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
