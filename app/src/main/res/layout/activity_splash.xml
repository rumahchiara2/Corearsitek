<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@mipmap/splash_bg">

    <!-- Card dengan BlurView -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurCardArsitek"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:alpha="0.9" />

        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:padding="16dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logoCoreArsitek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/corearsitek_card"
                android:scaleType="fitCenter"
                android:contentDescription="@null" />

            <!-- Shine overlay -->
            <ImageView
                android:id="@+id/shineArsitek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shine_effect"
                android:alpha="0.25"
                android:scaleType="fitXY" />
        </FrameLayout>
    </FrameLayout>

    <!-- Sama untuk Core Studio -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurCardStudio"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:alpha="0.9" />

        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:padding="16dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logoCoreStudio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/corestudio_card"
                android:scaleType="fitCenter"
                android:contentDescription="@null" />

            <!-- Shine overlay -->
            <ImageView
                android:id="@+id/shineStudio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shine_effect"
                android:alpha="0.25"
                android:scaleType="fitXY" />
        </FrameLayout>
    </FrameLayout>

</LinearLayout>
